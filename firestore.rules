rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // This is the correct and secure way to check roles for list/query operations.
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isNotBanned(userId) {
      // Allow if the user document doesn't exist yet, OR if the isBanned flag is not explicitly true.
      // Use exists() first to avoid unnecessary get() calls
      return !exists(/databases/$(database)/documents/users/$(userId)) ||
        get(/databases/$(database)/documents/users/$(userId)).data.isBanned != true;
    }

    function isBarOwner(barId) {
      // Simple, robust check that doesn't rely on cross-document reads.
      return isSignedIn() && barId == 'bar_' + request.auth.uid;
    }

    match /roles_admin/{userId} {
      allow get: if isOwner(userId);
      // Allow creation only by existing admins (self-promotion prevention)
      // The first admin must be created manually via Firebase Console
      allow create: if isOwner(userId)
                    && isAdmin() // Only existing admins can create new admin roles
                    && request.resource.data.keys().hasOnly(["isAdmin"]) 
                    && request.resource.data.isAdmin == true
                    && !exists(/databases/$(database)/documents/roles_admin/$(userId));
      
      // Explicitly deny list, update, delete for security.
      allow list, update, delete: if false;
    }

    match /users/{userId} {
      // A user can read their own profile, or an admin can read any profile.
      allow read: if isOwner(userId) || isAdmin();
      // Only admins can list all users.
      allow list: if isAdmin();
      // A user can create their own profile.
      allow create: if isOwner(userId);
      // A user can update their own profile if not banned, or an admin can update any profile.
      allow update: if isAdmin() || (isOwner(userId) && isNotBanned(userId));
      // Deleting user documents is disabled. Use ban flag instead.
      allow delete: if false;
    }

    match /email_to_uid/{emailLower} {
      // Allow read if the user is signed in (for looking up users by email)
      allow read: if isSignedIn();
      // Allow create/update only if:
      // 1. User is signed in
      // 2. The uid in the document matches the user's uid
      // Note: We trust that the emailLower in the path matches the user's email
      // because the client code ensures this by using user.email.toLowerCase()
      allow create, update: if isSignedIn() 
                            && request.resource.data.uid == request.auth.uid
                            && request.resource.data.keys().hasOnly(["uid", "createdAt"]);
      // Only admins can delete email indexes
      allow delete: if isAdmin();
      // No list access for security
      allow list: if false;
    }
    
    match /products/{productId} {
      // Читать можно свои продукты или продукты из библиотеки
      allow read: if isSignedIn() && isNotBanned(request.auth.uid) && (
        resource.data.barId == 'bar_' + request.auth.uid ||
        resource.data.isInLibrary == true
      );
      
      // Создавать можно свои продукты или продукты в библиотеку
      allow create: if isSignedIn() && isNotBanned(request.auth.uid) && (
        request.resource.data.barId == 'bar_' + request.auth.uid ||
        request.resource.data.isInLibrary == true
      );
      
      // Обновлять можно только свои продукты
      allow update: if isSignedIn() && isNotBanned(request.auth.uid) && 
        resource.data.barId == 'bar_' + request.auth.uid;
      
      // Удалять можно только свои продукты
      allow delete: if isSignedIn() && isNotBanned(request.auth.uid) && 
        resource.data.barId == 'bar_' + request.auth.uid;
      
      // List используется через where в запросах, поэтому требуется отдельная проверка
      allow list: if isSignedIn() && isNotBanned(request.auth.uid);
    }

    match /bars/{barId} {
      // Allow creation only if the bar ID matches the user's UID and they are creating it for themselves.
      allow create: if isSignedIn() && request.resource.data.ownerUserId == request.auth.uid && barId == 'bar_' + request.auth.uid && isNotBanned(request.auth.uid);
      
      // Use the simplified owner check for all other operations.
      allow read, update, delete: if isBarOwner(barId) || isAdmin();
      allow list: if isAdmin();

      match /members/{memberId} {
        allow read, list: if isBarOwner(barId) || isAdmin();
        allow create, update, delete: if isBarOwner(barId);
      }
      
      match /suppliers/{supplierId} {
         allow read, list: if isBarOwner(barId) || isAdmin();
         allow create, update, delete: if isBarOwner(barId);
      }

      match /purchaseOrders/{purchaseOrderId} {
        allow read, list: if isBarOwner(barId) || isAdmin();
        allow create, update, delete: if isBarOwner(barId);
        
        match /lines/{lineId} {
           allow read, list: if isBarOwner(barId) || isAdmin();
           allow create, update, delete: if isBarOwner(barId);
        }
      }

      match /inventorySessions/{inventorySessionId} {
      // Allow read/list if user is bar owner or admin
      // Note: list operations require explicit allow list rule
      allow read: if isBarOwner(barId) || isAdmin();
      allow list: if isBarOwner(barId) || isAdmin();
      allow create, update, delete: if isBarOwner(barId);

      match /lines/{inventoryLineId} {
        allow read, list: if isBarOwner(barId) || isAdmin();
        allow create, update, delete: if isBarOwner(barId);
      }
    }

    match /consent_logs/{logId} {
      // Users can create their own consent logs
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Users can read their own consent logs, admins can read all
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      // No updates or deletes allowed for audit trail integrity
      allow update, delete: if false;
      // Only admins can list consent logs
      allow list: if isAdmin();
    }

    match /deletion_requests/{requestId} {
      // Users can create their own deletion requests
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Users can read their own deletion requests, admins can read all
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      // Only admins can update deletion requests (to change status)
      allow update: if isAdmin();
      // No deletes allowed for audit trail integrity
      allow delete: if false;
      // Only admins can list deletion requests
      allow list: if isAdmin();
    }
  }
}
