rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // This is the correct and secure way to check roles for list/query operations.
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /roles_admin/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Users should not be able to list who is an admin.
      // Allow the designated admin to create their own role document, one time.
      allow create: if isOwner(userId) && request.auth.token.email == 'prostodeniskdt@gmail.com';
      allow update, delete: if false; // Roles cannot be changed or deleted from the client.
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      // An admin can delete any user except themselves.
      allow delete: if isAdmin() && request.auth.uid != userId;
    }
    
    match /products/{productId} {
        allow read, list: if isSignedIn();
        allow create, update, delete: if isSignedIn();
    }

    match /bars/{barId} {
      // Allow creation only if the bar ID matches the user's UID and they are creating it for themselves.
      // This rule does NOT depend on a pre-existing user document, resolving the circular dependency.
      allow create: if isSignedIn() && request.resource.data.ownerUserId == request.auth.uid && barId == 'bar_' + request.auth.uid;
      
      // Read/update/delete still require the user to be a manager or admin.
      allow read, update, delete: if isBarOwnerByPath(barId) || isAdmin();
      allow list: if isAdmin();

      function isBarOwnerByPath(barId) {
        // A bar owner is identified by reading their existing user document.
        // This works for existing users, not for creation.
        var userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
        return isSignedIn() 
                && userDoc.data.role == 'manager' 
                && barId == 'bar_' + request.auth.uid;
      }

      match /members/{memberId} {
        allow read, list: if isBarOwnerByPath(barId) || isAdmin();
        allow create, update, delete: if isBarOwnerByPath(barId);
      }
      
      match /suppliers/{supplierId} {
         allow read, list: if isBarOwnerByPath(barId) || isAdmin();
         allow create, update, delete: if isBarOwnerByPath(barId);
      }

      match /purchaseOrders/{purchaseOrderId} {
        allow read, list: if isBarOwnerByPath(barId) || isAdmin();
        allow create, update, delete: if isBarOwnerByPath(barId);
        
        match /lines/{lineId} {
           allow read, list: if isBarOwnerByPath(barId) || isAdmin();
           allow create, update, delete: if isBarOwnerByPath(barId);
        }
      }

      match /inventorySessions/{inventorySessionId} {
        allow read, list: if isBarOwnerByPath(barId) || isAdmin();
        allow create, update, delete: if isBarOwnerByPath(barId);

        match /lines/{inventoryLineId} {
          allow read, list: if isBarOwnerByPath(barId) || isAdmin();
          allow create, update, delete: if isBarOwnerByPath(barId);
        }
      }
    }
  }
}
