rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isNotBanned(userId) {
      // Allow if the user document doesn't exist yet, OR if the isBanned flag is not explicitly true.
      return !exists(/databases/$(database)/documents/users/$(userId))
        || get(/databases/$(database)/documents/users/$(userId)).data.isBanned != true;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isBarOwner(barId) {
      return isSignedIn() && barId == 'bar_' + request.auth.uid && isNotBanned(request.auth.uid);
    }

    match /email_to_uid/{emailLower} {
      allow get: if isSignedIn() && isNotBanned(request.auth.uid);
      allow create: if isSignedIn() 
                    && request.auth.uid == request.resource.data.uid 
                    && request.resource.data.keys().hasOnly(['uid','createdAt'])
                    && emailLower == request.auth.token.email.lower();
      allow update, delete, list: if false;
    }

    match /roles_admin/{userId} {
      allow get: if isOwner(userId);
      allow create: if isOwner(userId) 
                    && request.auth.token.email == "prostodeniskdt@gmail.com"
                    && !exists(/databases/$(database)/documents/roles_admin/$(userId))
                    && request.resource.data.keys().hasOnly(["isAdmin"])
                    && request.resource.data.isAdmin == true;
      
      allow list, update, delete: if false;
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      // An admin can update any user. A user can update their own profile if they are not banned.
      allow update: if isAdmin() || (isOwner(userId) && isNotBanned(userId));
      allow delete: if false; // Deleting user documents is disabled. Use ban flag instead.
    }
    
    match /products/{productId} {
        allow read, list: if isSignedIn() && isNotBanned(request.auth.uid);
        allow create, update, delete: if isSignedIn() && isNotBanned(request.auth.uid);
    }

    match /bars/{barId} {
      allow create: if isSignedIn() && request.resource.data.ownerUserId == request.auth.uid && barId == 'bar_' + request.auth.uid && isNotBanned(request.auth.uid);
      
      allow read, update, delete: if isBarOwner(barId) || isAdmin();
      allow list: if isAdmin();

      match /members/{memberId} {
        allow read, list: if isBarOwner(barId) || isAdmin();
        allow create: if isBarOwner(barId) 
                      && request.resource.data.keys().hasOnly(['userId','role','invitedAt','invitedBy']) 
                      && request.resource.data.userId == memberId 
                      && request.resource.data.invitedBy == request.auth.uid
                      && request.resource.data.role in ['bartender','manager'];
        allow update: if isBarOwner(barId) 
                      && request.resource.data.userId == memberId
                      && request.resource.data.role in ['bartender','manager'];
        allow delete: if isBarOwner(barId);
      }
      
      match /suppliers/{supplierId} {
         allow read, list: if isBarOwner(barId) || isAdmin();
         allow create, update, delete: if isBarOwner(barId);
      }

      match /purchaseOrders/{purchaseOrderId} {
        allow read, list: if isBarOwner(barId) || isAdmin();
        allow create, update, delete: if isBarOwner(barId);
        
        match /lines/{lineId} {
           allow read, list: if isBarOwner(barId) || isAdmin();
           allow create, update, delete: if isBarOwner(barId);
        }
      }

      match /inventorySessions/{inventorySessionId} {
        allow read, list: if isBarOwner(barId) || isAdmin();
        allow create, update, delete: if isBarOwner(barId);

        match /lines/{inventoryLineId} {
          allow read, list: if isBarOwner(barId) || isAdmin();
          allow create, update, delete: if isBarOwner(barId);
        }
      }
    }
  }
}
