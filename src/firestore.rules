rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    function isBarOwnerByPath(barId) {
        return isSignedIn() && barId == 'bar_' + request.auth.uid;
    }

    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------
    match /roles_admin/{userId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    match /users/{userId} {
      // An admin can read any user profile. A user can read their own.
      allow read: if isOwner(userId) || isAdmin();
      // Only an admin can list all users.
      allow list: if isAdmin();
      
      // A user can create their own profile.
      allow create: if isOwner(userId);

      // An admin can update any user. A user can update their own.
      allow update: if isOwner(userId) || isAdmin();
      
      // An admin can delete any user except for themselves.
      allow delete: if isAdmin() && request.auth.uid != userId;
    }
    
    match /products/{productId} {
        allow read, list: if isSignedIn();
        allow create, update, delete: if isSignedIn();
    }

    match /bars/{barId} {
      allow create: if isBarOwnerByPath(barId) && request.resource.data.ownerUserId == request.auth.uid;
      allow read, update, delete: if isBarOwnerByPath(barId) || isAdmin();
      allow list: if isAdmin();

      match /members/{memberId} {
        allow read, list: if isBarOwnerByPath(barId) || isAdmin();
        allow create, update, delete: if isBarOwnerByPath(barId);
      }
      
      match /suppliers/{supplierId} {
         allow read, list: if isBarOwnerByPath(barId) || isAdmin();
         allow create, update, delete: if isBarOwnerByPath(barId);
      }

      match /purchaseOrders/{purchaseOrderId} {
        allow read, list: if isBarOwnerByPath(barId) || isAdmin();
        allow create, update, delete: if isBarOwnerByPath(barId);
        
        match /lines/{lineId} {
           allow read, list: if isBarOwnerByPath(barId) || isAdmin();
           allow create, update, delete: if isBarOwnerByPath(barId);
        }
      }

      match /inventorySessions/{inventorySessionId} {
        allow read, list: if isBarOwnerByPath(barId) || isAdmin();
        allow create, update, delete: if isBarOwnerByPath(barId);

        match /lines/{inventoryLineId} {
          allow read, list: if isBarOwnerByPath(barId) || isAdmin();
          allow create, update, delete: if isBarOwnerByPath(barId);
        }
      }
    }
  }
}
